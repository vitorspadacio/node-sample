{
  "openapi": "3.0.0",
  "info": {
    "title": "Node Sample",
    "description": "Um exemplo de backend completo em Node",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1"
    }
  ],
  "paths": {
    "/health/": {
      "get": {
        "description": "",
        "parameters": [],
        "responses": {}
      }
    },
    "/user/": {
      "get": {
        "tags": [
          "Users"
        ],
        "description": "",
        "parameters": [],
        "responses": {}
      },
      "post": {
        "tags": [
          "Users"
        ],
        "description": "",
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "schema": {
              "$ref": "#/components/schemas/postUserSchema"
            }
          }
        ],
        "responses": {}
      }
    }
  },
  "components": {
    "schemas": {
      "postUserSchema": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9]*$"
          },
          "age": {
            "type": "number",
            "format": "float",
            "maximum": 99
          }
        },
        "required": [
          "name",
          "age"
        ],
        "additionalProperties": false
      }
    }
  }
}